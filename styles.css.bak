:root{--bg:#ecfdf5;--ink:#064e3b;--pri:#059669;--border:#a7f3d0;--card:#ffffff;--muted:#0f766e}
*{box-sizing:border-box}
html{min-height:100%;position:relative}
body{margin:0;font:16px/1.5 system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Noto Sans,sans-serif;background:var(--bg);color:var(--ink);min-height:100vh;padding-bottom:80px}
.container{max-width:1040px;margin:auto;padding:16px}
.header-wrap{display:flex;align-items:center;justify-content:space-between;gap:12px}
/* .logo{display:grid;place-items:center;width:36px;height:36px;border-radius:12px;background:var(--pri);color:#fff;box-shadow:0 6px 16px rgba(5,150,105,.25)} */
.navlink{border:1px solid var(--border);background:#fff;color:var(--ink);padding:10px 14px;border-radius:14px;text-decoration:none;transition:.2s}
.navlink.active,.navlink:hover{background:var(--pri);border-color:var(--pri);color:#fff}
.grid{display:grid;gap:16px}
.grid-2{grid-template-columns:1fr}
@media(min-width:800px){.grid-2{grid-template-columns:1fr 1fr}}
.card{background:var(--card);border:1px solid var(--border);border-radius:22px;padding:22px;box-shadow:0 6px 20px rgba(4,120,87,.07)}
.btn{border:1px solid var(--border);background:#fff;color:var(--ink);padding:10px 14px;border-radius:14px;cursor:pointer;text-decoration:none;transition:.2s}
.btn.primary{background:var(--pri);border-color:var(--pri);color:#fff}
.btn:hover{background:#f7fff9}
.btn.primary:hover{filter:brightness(.95)}
.kpi{padding:12px;border:1px solid var(--border);background:#f0fdf4;border-radius:16px}
.row{display:flex;gap:10px;flex-wrap:wrap;align-items:center}
footer{border-top:1px solid var(--border);padding:20px;text-align:center;color:var(--muted);position:absolute;bottom:0;left:0;right:0;background:var(--bg)}
.list{padding-left:18px}
.pill{border:1px solid var(--border);background:#fff;border-radius:999px;padding:8px 12px;cursor:pointer}
.pill.active{background:var(--pri);color:#fff;border-color:var(--pri)}


 
