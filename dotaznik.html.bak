    { name: "Peƒçen√© tofu s cuketou",     kcal: 370, img: "https://howtomakedinner.com/wp-content/uploads/2019/11/grilled_zucchini_salad-1024x683.jpg" },
    { name: "Kokosov√© curry s karfiolom", kcal: 410, img: "https://i0.wp.com/jamdownfoodie.com/wp-content/uploads/2021/05/IMG_5219.jpg?resize=585%2C585&ssl=1" },
    { name: "Smoothie s rastlinn√Ωm prote√≠nom", kcal: 250, img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTvqGhT_OfqL5j8QUe8NetfX-QE_0OQy_qn5A&s" }
  ],

  vegetarian: [
    { name: "Ovsen√° ka≈°a s ovoc√≠m",      kcal: 380, img: "https://i1.pickpik.com/photos/154/326/346/food-drink-breakfast-food-fruit-preview.jpg" },
    { name: "≈†o≈°ovicov√© kari",          kcal: 420, img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQyGY9FgXjWuMNyBggUJyz2DDiwa0ksm0JENQ&s" },
