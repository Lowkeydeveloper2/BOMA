  <!-- Uk√°≈ækov√© ovl√°danie (ak u≈æ m√°≈° vlastn√© inputs, nechaj svoje id-ƒçka, len ponechaj v√Ωsledkov√© id-ƒçka ni≈æ≈°ie) -->
  <form id="quizForm" class="row" autocomplete="off">
    <label>Vek: <input id="age" type="number" min="10" max="90" step="1" required style="width:6rem"></label>
    <label>Pohlavie:
      <select id="sex">
        <option value="male">mu≈æ</option>
        <option value="female">≈æena</option>
      </select>
    </label>
    <label>Aktivita:
      <select id="activity">
        <option value="low">n√≠zka</option>
        <option value="moderate" selected>stredn√°</option>
        <option value="high">vysok√°</option>
      </select>
    </label>

    <div id="goalRow" class="row" style="align-items:center">
      <strong>Cieƒæ:</strong>
      <span class="pill active" data-goal="lose">chudn√∫≈•</span>
      <span class="pill" data-goal="maintain">udr≈æa≈•</span>
      <span class="pill" data-goal="gain">pribra≈•</span>
    </div>

    <div id="prefs" class="row" style="align-items:center">
      <strong>Preferencie:</strong>
      <span class="pill" data-pref="vegetarian">vegetari√°n</span>
      <span class="pill" data-pref="vegan">vegan</span>
      <span class="pill" data-pref="lowcarb">low-carb</span>
    </div>

    <button type="submit">Vypoƒç√≠ta≈•</button>
  </form>

  <section id="result" class="hidden">
    <h2>Tvoj denn√Ω pl√°n</h2>
    <div class="nums" style="margin-bottom:1rem">
      <div><div><strong id="outKcal">‚Äì</strong></div><div class="muted">kcal</div></div>
      <div><div><strong id="outProtein">‚Äì</strong></div><div class="muted">bielkoviny</div></div>
      <div><div><strong id="outCarbs">‚Äì</strong></div><div class="muted">sacharidy</div></div>
      <div><div><strong id="outFats">‚Äì</strong></div><div class="muted">tuky</div></div>
    </div>

    <h3>Navrhovan√© jedl√°</h3>
    <!--<ul id="meals" class="hidden"></ul> -->

    <div id="mealCards" class="grid"></div>

    <p id="tips" class="muted"></p>

    <p class="muted" style="margin-top:1rem">
    </p>
