</main>

<footer>¬© <span id="yearFooter"></span> BOMA. Edukaƒçn√Ω projekt. </footer>

<script>
  // rok len do footeru
  document.getElementById('yearFooter').textContent = new Date().getFullYear();

  // v√Ωber cieƒæa
  const goalRow = document.getElementById('goalRow');
  let goal = 'lose';
  goalRow.addEventListener('click', (e) => {
    const b = e.target.closest('[data-goal]');
    if (!b) return;
    goal = b.dataset.goal;
    goalRow.querySelectorAll('.pill').forEach(p => p.classList.toggle('active', p === b));
  });

  // preferencie
  const prefs = new Set();
  document.getElementById('prefs').addEventListener('click', e => {
    const p = e.target.closest('[data-pref]');
    if (!p) return;
    const k = p.dataset.pref;
    if (prefs.has(k)) { prefs.delete(k); p.classList.remove('active'); }
    else { prefs.add(k); p.classList.add('active'); }
  });

  // kalkul√°cie
  function estimateKcalBase(s, a, act) {
    let base = 1800;
    if (s === 'male') base += 200;
    if (!isNaN(a)) {
      if (a < 18) base -= 100;
      else if (a > 50) base -= 100;
    }
    const m = act === 'low' ? 1.2 : act === 'moderate' ? 1.4 : 1.6;
    return Math.round(base * m);
  }

