    { name: "Ovsen√° ka≈°a s medom",        kcal: 370, img: "https://cdn.stocksnap.io/img-thumbs/960w/oatmeal-honey_NBCKVD5IDL.jpg" },
    { name: "Cestoviny s m√§som",         kcal: 520, img: "https://live.staticflickr.com/4067/4335462959_1d6be040b3_b.jpg" },
    { name: "Peƒçen√© kura so zemiakmi",   kcal: 500, img: "https://live.staticflickr.com/6079/6029836707_e840ac3488_c.jpg" },
    { name: "Ryb√≠ fil√© s ry≈æou",         kcal: 440, img: "https://sanshreefoods.com/wp-content/uploads/2025/09/oven-baked-spiced-basa-on-harissa-risotto.jpg" },
    { name: "Tuniakov√© cestoviny",       kcal: 480, img: "https://www.cookipedia.co.uk/wiki/images/5/59/Ensalada_de_macarrones_y_atun_recipe.jpg" },
    { name: "Hov√§dz√≠ gul√°≈°",             kcal: 530, img: "https://upload.wikimedia.org/wikipedia/commons/2/2f/Goulash_hungarian.jpg" }
  ]
};



  // üç¥ zostavenie menu podƒæa preferenci√≠
  function buildSampleMeals(p) {
    const has = (k) => p.has(k);
    if (has('vegan') || (has('vegetarian') && has('lowcarb'))) return mealsData.vegan_lowcarb;
    if (has('vegetarian')) return mealsData.vegetarian;
    if (has('lowcarb')) return mealsData.lowcarb;
    return mealsData.standard;
  }

  // üßæ render kariet
  function renderMealCards(mealList) {
    const wrap = document.getElementById('mealCards');
    wrap.innerHTML = mealList.map(meal => `
      <article class="card">
        <img class="thumb" src="${meal.img}" alt="${meal.name}" loading="lazy" />
        <h4>${meal.name}</h4>
        <p class="meta">‚âà ${meal.kcal} kcal</p>
      </article>
    `).join('');
  }

  // odoslanie formul√°ra
  document.getElementById('quizForm').addEventListener('submit', (e) => {
    e.preventDefault();
    const age = parseFloat(document.getElementById('age').value);
    const sex = document.getElementById('sex').value;
    const act = document.getElementById('activity').value;

    const kcal = estimateKcalBase(sex, age, act);
    let p = 0.25, c = 0.45, f = 0.30;
    if (goal === 'lose') { p = 0.30; c = 0.40; f = 0.30; }
    if (goal === 'gain') { p = 0.25; c = 0.50; f = 0.25; }

    document.getElementById('outKcal').textContent    = kcal + ' kcal';
    document.getElementById('outProtein').textContent = Math.round(kcal * p / 4) + ' g';
    document.getElementById('outCarbs').textContent   = Math.round(kcal * c / 4) + ' g';
    document.getElementById('outFats').textContent    = Math.round(kcal * f / 9) + ' g';

    const meals = buildSampleMeals(prefs);
    renderMealCards(meals);
    document.getElementById('result').classList.remove('hidden');
  });
</script>

