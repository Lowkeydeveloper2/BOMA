<body>
    body { font-family: system-ui, Arial, sans-serif; margin: 0; line-height: 1.5; }
    main { max-width: 1000px; margin: 0 auto; padding: 1.2rem; box-sizing: border-box; }
    h1 { margin: .2rem 0 1rem; }
    .row { display: flex; flex-wrap: wrap; gap: var(--gap); }
    .pill { padding: .5rem .9rem; border-radius: 999px; background: var(--pill); cursor: pointer; user-select: none; }
    .pill.active { background: var(--pill-active); color: #fff; font-weight: 600; }
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px,1fr)); gap: var(--gap); }
    .card { border: 1px solid #ddd; border-radius: 12px; overflow: hidden; background: #fff; display: flex; flex-direction: column; }
    .thumb { aspect-ratio: 16/10; width: 100%; object-fit: cover; background:#f5f5f5; }
    .card h4 { margin: .6rem .9rem 0; font-size: 1rem; }
    .meta { margin: .4rem .9rem .9rem; color:#555; font-size:.9rem;}
    .nums { display:grid; grid-template-columns: repeat(4, minmax(0,1fr)); gap:.5rem; }
    .nums div { background:#fafafa; border:1px solid #eee; border-radius:10px; padding:.5rem; text-align:center; }
    .muted { color:#666; font-size:.9rem; }
    .hidden { display:none; }

    /* mal√© zlep≈°enia na mobil */
    @media (max-width:560px){
      .nums { grid-template-columns: repeat(2, minmax(0,1fr)); }
    }


    /* -- centrovanie kontajnerov s obr√°zkami -- */

/* karty v #mealCards: pevnej≈°ia ≈°√≠rka stƒ∫pcov + centrovanie mrie≈æky */
#mealCards {
  grid-template-columns: repeat(auto-fit, minmax(260px, 300px));
  justify-content: center; /* vycentruje cel√© stƒ∫pce v r√°mci dostupnej ≈°√≠rky */
}
#mealCards .card {
  max-width: 300px;        /* aby sa karta neroz≈•ahovala na 1fr cez cel√∫ ≈°√≠rku */
  width: 100%;
}

/* polo≈æky zoznamu v #meals: vycentrujeme a obmedz√≠me max. ≈°√≠rku karty */
#meals {
  grid-template-columns: repeat(auto-fit, minmax(260px, 520px));
  justify-content: center;
}
#meals li {
  max-width: 520px;        /* aby ka≈æd√° polo≈æka mala ‚Äûkartu‚Äú v strede */
  width: 100%;
  justify-self: center;    /* pre istotu centrovanie v bunke mrie≈æky */
}





/* --- footer prilepen√Ω na spodok, bez zmeny vzhƒæadu mainu --- */
