    { name: "Gr√©cky ≈°al√°t",             kcal: 340, img: "https://www.cookipedia.co.uk/wiki/images/8/87/Greek_salad_recipe.jpg" },
    { name: "Zeleninov√© rizoto",        kcal: 390, img: "https://i1.pickpik.com/photos/397/437/136/flowers-yellow-table-lovely-preview.jpg" },
    { name: "Cestoviny s pestom",       kcal: 450, img: "https://freerangestock.com/sample/163143/fresh-pesto-pasta-with-cherry-tomatoes.jpg" }
  ],

  lowcarb: [
    { name: "Gr√©cky jogurt s orechmi",   kcal: 290, img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQg-Kpot8CH8AmRoUFYYfRzGQKIkW8lfZaFyQ&s" },
